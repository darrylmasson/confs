set autoindent smartindent
syntax on

set number relativenumber
set encoding=utf-8
set showmatch
set nocompatible
set smarttab
filetype on
filetype indent on
filetype plugin on
set ruler
set list
set listchars=tab:>·,trail:·,extends:>,precedes:<
set shiftwidth=2
set expandtab
set tabstop=8
set background=dark
set hlsearch
set wrap
set linebreak
set scrolloff=6

set ignorecase
set smartcase
set incsearch

set splitbelow splitright
set foldmethod=syntax
set backspace=indent,eol,start
set showcmd
