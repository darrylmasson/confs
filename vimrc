set autoindent smartindent
syntax on

set number relativenumber
set encoding=utf-8
set showmatch
set nocompatible
set smarttab
filetype on
filetype indent on
filetype plugin on
set ruler
set list
set listchars=tab:>·,trail:·
set shiftwidth=4
set expandtab
set tabstop=4
set background=dark
set hlsearch

set ignorecase
set smartcase

set splitbelow splitright

map <leader>o :setlocal spell! spelllang=en_us<CR>
